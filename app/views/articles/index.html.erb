<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="overlay pb-5 pt-3 mt-3">
      <h1 id="headline" class="display-4 text-center">UKRAINE RUSSIA BLOG</h1>
      <h5 id="tagline" class="text-center pb-2">For people that want to understand the crisis in Ukraine</h5>
    </div>
  </div>
</div>

<div class="ml-4 mb-3"> Our blog has <%= Article.public_count %> articles and counting! </div>

<div class="ml-4">
 <%= link_to "Articles", root_path, class: "btn btn-primary mb-4" %>
<%= link_to("New Article", new_article_path, :method => :get, :class => "btn btn-primary mb-4") %>

<ul class="list-group">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>
</div>
