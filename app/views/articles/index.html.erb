
<div class="jumbotron jumbotron-fluid" id="hero">
  <div class="container">
    <div class="overlay pb-5 pt-3 mt-3">
      <h1 id="headline" class="display-4 text-center">UKRAINE RUSSIA BLOG</h1>
      <h5 id="tagline" class="text-center pb-2">For people that want to understand the crisis in Ukraine</h5>
    </div>
  </div>
</div>

  <div class="row ml-4">
    <div class= "col">
      <%# <div class="mb-3"> Our blog has <%= Article.public_count %>


    <div class="row align-items-center mb-4">
        <div class="col-6">
        <%= link_to "ARTICLES", root_path, class: "font-weight-bold mr-3" %>
        <%= link_to("NEW ARTICLE", new_article_path, :method => :get, :class => "btn btn-primary") %>
        </div>
        </div>

        <div class="col-10 pl-0">
        <ul class="list-group">
          <% @articles.each do |article| %>
            <% unless article.archived? %>
              <div class="card mb-4">
                <%= link_to article.title, article, class: "card-header font-weight-bold bg-white text-dark border-0 pb-1" %>
                <div class="card-body pb-2 pt-2 text-secondary text-truncate"><%= article.body%></div>
              </div>
            <% end %>
          <% end %>
          <%# <%= page_entries_info @articles %>
          <%= paginate @articles, :class => "mb-5" %>
        </ul>
      </div>
    </div>
  </div>
<div class="jumbotron mt-5 text-white rounded-0" id="support">
  <h4>Show Your Support</h4>
   <p>Give money to the IRC which helps Ukraine refugees in Poland as well as other countries in the world.</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="#" role="button">Donate</a>
  </p>
</div>

<div class="flex-container ml-4 mr-4">
  <div class="row">
    <% @response['results'].drop(1).first(6).each do |r| %>
      <div class="col-lg-2 mb-3">
        <div class="card h-100">
          <div class="card-body d-flex flex-column ">
            <h5 class="card-title"> <%= link_to r["title"], (r["link"]), :target => '_blank' %> </a> </h5>

                  <% if r['image_url']%>
                    <%= image_tag(r['image_url'], id: "image-article") %>
                  <% else %>
                    <img alt="1" src="https://e7.pngegg.com/pngimages/911/883/png-clipart-free-newspaper-headline-others-love-logo.png">
                  <% end %>

                <a class="card-link text-info mt-auto text-center pt-3"> <%= link_to  'Read Article', (r["link"]), :target => '_blank' %> </a>


          </div>
       </div>
      </div>
    <% end %>
  </div>
 </div>



