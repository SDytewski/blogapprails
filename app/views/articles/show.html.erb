<div class="mt-3 ml-3">
  <h1 class="ml-4 mb-4"><%= @article.title %></h1>

<form>
  <div class="form-group row ml-3">
    <div class="col-md-6">
  <p><%= @article.body %></p>

    </div>
  </div>
</form>
<div class="row">
  <div class="col-md-12 ml-2">
    <div class="ml-4 mb-4">
        <a><%= link_to "Edit", edit_article_path(@article), :class => "btn btn-primary mr-2" %></a>
        <a><%= link_to 'Destroy', article_path(@article), :class => "btn btn-primary",
                  method: :delete %></a>
    </div>
  </div>
</div>
<hr>
<div class="ml-5">
  <h3>Comments</h3>
  <%= render @article.comments %>

  <h4>Add a comment:</h4>
  <%= render 'comments/form' %>
</div>
